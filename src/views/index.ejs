<% include partials/_header %>

<!-- Nav -->
<nav class="navbar navbar-dark bg-dark mb-4">
    <a href="/" class="navbar-brand">CRUD with Mongo</a>
</nav>

<div class="container">
   <div class="row">
       <!-- FORM -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Insert title" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" class="form-control" placeholder="Insert a description"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add</button>
                    </form>
                </div>
            </div>
        </div>

       <!-- LIST -->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>N.</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>

   </div>
</div>

<% include partials/_footer %>